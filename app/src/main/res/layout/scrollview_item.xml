<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/scrollview_item_background"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/imageViewVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@drawable/mqdefault" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Real Life Trick Shots 2"
            android:textColor="@color/colorTitles"
            android:textSize="14sp"
            tools:text='android:ellipsize="end"        android:ellipsize="end"        android:ellipsize="end"        android:ellipsize="end"        android:ellipsize="end"        android:ellipsize="end"        android:ellipsize="end"' />

        <TextView
            android:id="@+id/tvChannelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tvTitle"
            android:textColor="@color/colorVideoInfo"
            android:textSize="12sp"
            tools:text="Dude Perfect" />

        <TextView
            android:id="@+id/tvViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tvChannelTitle"
            android:textColor="@color/colorVideoInfo"
            android:textSize="12sp"
            tools:text="1234567890 wyÅ›wietlenia" />

    </RelativeLayout>

</LinearLayout>